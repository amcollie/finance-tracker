<div class="row">

  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friends_list.each do |friend| %>
          <tr>
            <th scope="row"><%= friend.first_name %></th>
            <td><%= friend.last_name %></td>
            <td><%= friend.email %></td>
            <td><%= link_to 'View Profile', user_path(friend), class: 'btn btn-sm btn-outline-success' %> 
                <%= link_to 'Unfollow', friendship_path(friend), method: :delete,
                                                                 data: { confirm: 'Are you sure?' },
                                                                 class: 'btn btn-sm btn-outline-warning' %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>